<UserControl
    x:Class="MovieDatabase.MVVM.View.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:local="clr-namespace:MovieDatabase.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodel="clr-namespace:MovieDatabase.MVVM.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding HomeVM, Source={x:Static viewmodel:MainViewModel.Instance}}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="550" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Height="Auto"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            BorderBrush="Transparent"
            BorderThickness="0">
            <StackPanel
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Image
                    Width="400"
                    Height="576"
                    Source="{Binding Image}" />
                <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                    <Image
                        Width="20"
                        Height="20"
                        Margin="5"
                        HorizontalAlignment="Left"
                        MouseLeftButtonUp="Edit"
                        Source="{StaticResource EditIcon}"
                        Visibility="{Binding EditVisibility}" />
                    <TextBlock
                        Margin="10"
                        FontSize="30"
                        Foreground="White"
                        Text="{Binding Title}" />
                    <TextBlock
                        Margin="10"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding Year}" />
                    <TextBlock
                        Margin="10"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding Runtime}" />
                    <TextBlock
                        Margin="10"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding Actors}" />
                    <TextBlock
                        Margin="10"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding Awards}" />
                    <TextBlock
                        Margin="10"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding Genres}" />
                    <TextBlock
                        Margin="10"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding IMDBRating}" />
                    <TextBlock
                        Margin="10"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding MetaScore}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="18"
                        Foreground="White"
                        MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                        Text="{Binding Plot}"
                        TextWrapping="Wrap"
                        Visibility="{Binding EditVisibility}" />
                    <ui:Button
                        Width="350"
                        Height="80"
                        Margin="10,30,0,0"
                        HorizontalAlignment="Left"
                        BorderBrush="Transparent"
                        Command="{Binding PlayMovieCommand}"
                        Content="{Binding PlayText}"
                        FontSize="28"
                        Icon="Play24"
                        Visibility="{Binding EditVisibility}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!--#region Stackpanel bottom-->
        <Grid Grid.Row="1">
            <ListView
                x:Name="Panel_Mini"
                Margin="5"
                Background="Transparent"
                BorderBrush="Transparent"
                FlowDirection="LeftToRight"
                Focusable="False"
                ItemsSource="{Binding Collection}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectedIndex="{Binding SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Focusable="False" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.Effect>
                    <DropShadowEffect Opacity=".5" />
                </ListView.Effect>

                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="SelectionChanged">
                        <behaviors:InvokeCommandAction Command="{Binding SelectedChanged}" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

            </ListView>
        </Grid>
        <!--#endregion-->
    </Grid>

</UserControl>